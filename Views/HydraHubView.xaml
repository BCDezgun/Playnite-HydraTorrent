<UserControl x:Class="HydraTorrent.Views.HydraHubView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HydraTorrent.Views"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1200" Cursor="Arrow">
    <UserControl.Resources>
        <local:ColumnWidthConverter x:Key="ColumnWidthConverter" />
        <local:InverseBoolConverter x:Key="InverseBoolConverter" />
        <local:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>

        <Style x:Key="FilterCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteHistoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent">
                            <Path x:Name="Path" 
                                  Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                  Fill="#66FFFFFF" Stretch="Uniform" Width="10" Height="10"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Path" Property="Fill" Value="#FF5555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <Border DockPanel.Dock="Top" Background="Transparent" Height="52" BorderThickness="0,0,0,1" Cursor="Arrow">
            <Border.BorderBrush>
                <SolidColorBrush Color="Gray" Opacity="0.2"/>
            </Border.BorderBrush>
            <DockPanel>                
                <TextBlock Text="{DynamicResource LOC_HydraTorrent_HubTitle}" Margin="12,0,0,0" VerticalAlignment="Center" 
                           FontSize="22" FontWeight="SemiBold" Foreground="White"/>
            </DockPanel>
        </Border>

        <TabControl x:Name="MainTabControl" Margin="0,8,0,0" Background="Transparent" BorderThickness="0" Cursor="Arrow">
            <TabItem Header="{DynamicResource LOC_HydraTorrent_TabSearch}" Cursor="Hand">
                <Grid Margin="15">
                    <Grid Margin="0,0,0,15" Height="40" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtSearch" Height="40" FontSize="18" Padding="15,0" 
                                 Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="1" 
                                 VerticalContentAlignment="Center" KeyDown="TxtSearch_KeyDown" TextChanged="TxtSearch_TextChanged">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="20"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <Button x:Name="btnSearch" Grid.Column="1" Content="{DynamicResource LOC_HydraTorrent_SearchButton}" Height="40" Width="120" 
                                Margin="10,0,0,0" Click="BtnSearch_Click" FontSize="16" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#2ECC71" CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Popup x:Name="HistoryPopup" PlacementTarget="{Binding ElementName=txtSearch}" Placement="Bottom" 
                               StaysOpen="False" AllowsTransparency="True">
                            <Border Background="#E61E1E1E" BorderBrush="#44FFFFFF" BorderThickness="1" CornerRadius="12" 
                                    Width="{Binding ElementName=txtSearch, Path=ActualWidth}">
                                <ListBox x:Name="lstHistory" Background="Transparent" BorderThickness="0" Foreground="White" 
                                         SelectionChanged="LstHistory_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Width="{Binding ElementName=lstHistory, Path=ActualWidth, 
                                                  Converter={StaticResource ColumnWidthConverter}, ConverterParameter=0.95}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding}" Margin="10,5" VerticalAlignment="Center"/>
                                                <Button Grid.Column="1" Style="{StaticResource DeleteHistoryButtonStyle}" 
                                                        Tag="{Binding}" Click="BtnDeleteHistory_Click" 
                                                        VerticalAlignment="Center" Width="30" Height="30" 
                                                        ToolTip="{StaticResource DeleteHistoryButtonStyle}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </Popup>
                    </Grid>

                    <Grid Margin="0,55,0,70">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.8*"/>
                            <ColumnDefinition Width="0.2*"/>
                        </Grid.ColumnDefinitions>

                        <ListView x:Name="lstResults" Grid.Column="0" Background="Transparent" Foreground="White" 
                                  BorderThickness="0" MouseDoubleClick="LstResults_MouseDoubleClick">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="{DynamicResource LOC_HydraTorrent_ColumnName}" 
                                                    Width="{Binding ElementName=lstResults, Path=ActualWidth, 
                                                                    Converter={StaticResource ColumnWidthConverter}, 
                                                                    ConverterParameter=0.69}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" Foreground="White"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="{Binding ElementName=lstResults, Path=ActualWidth,
                                                    Converter={StaticResource ColumnWidthConverter},
                                                    ConverterParameter=0.09}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader x:Name="HeaderSize" 
                                                                    Content="{DynamicResource LOC_HydraTorrent_ColumnSize}"
                                                                    Click="HeaderSize_Click"
                                                                    Cursor="Hand"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Size}" Foreground="White"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="{DynamicResource LOC_HydraTorrent_ColumnSource}" DisplayMemberBinding="{Binding Source}" 
                                                    Width="{Binding ElementName=lstResults, Path=ActualWidth, 
                                                                    Converter={StaticResource ColumnWidthConverter}, 
                                                                    ConverterParameter=0.125}"/>
                                    <GridViewColumn Width="{Binding ElementName=lstResults, Path=ActualWidth,
                                                    Converter={StaticResource ColumnWidthConverter},
                                                    ConverterParameter=0.09}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader x:Name="HeaderDate" 
                                                                    Content="{DynamicResource LOC_HydraTorrent_ColumnDate}"
                                                                    Click="HeaderDate_Click"
                                                                    Cursor="Hand"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding UploadDate, StringFormat={}{0:dd/MM/yyyy}}" 
                                                            Foreground="White"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <Border Grid.Column="1" Margin="15,0,0,0" Padding="5" Background="Transparent" 
                                BorderThickness="0" VerticalAlignment="Top" Cursor="Arrow">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource LOC_HydraTorrent_SearchFilters}" Foreground="#888" FontSize="11" FontWeight="Bold" 
                                           Margin="0,0,0,15" Opacity="0.7"/>
                                <TextBlock Text="{DynamicResource LOC_HydraTorrent_Sources}" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                                <ComboBox x:Name="cmbSources" Height="35" Background="Transparent" Foreground="White" BorderThickness="0">
                                    <ComboBox.Template>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <ToggleButton x:Name="ToggleButton" BorderThickness="1" BorderBrush="#44FFFFFF" 
                                                              Background="#20FFFFFF" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, 
                                                                                               RelativeSource={RelativeSource TemplatedParent}}" 
                                                              ClickMode="Press">
                                                    <ToggleButton.Template>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                                                    BorderThickness="1" CornerRadius="6">
                                                                <Grid Margin="10,0">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Text="{Binding SourceButtonText}" Foreground="White" 
                                                                               VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                                                    <Path Grid.Column="1" Data="M0,0 L4,4 L8,0" Stroke="#888" StrokeThickness="2" 
                                                                          VerticalAlignment="Center" Margin="10,0,0,0"/>
                                                                </Grid>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </ToggleButton.Template>
                                                </ToggleButton>

                                                <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                                       AllowsTransparency="True" Focusable="False" PopupAnimation="Fade">
                                                    <Border Background="#E61E1E1E" BorderBrush="#44FFFFFF" BorderThickness="1" CornerRadius="8" 
                                                            MinWidth="{TemplateBinding ActualWidth}" MaxHeight="400" Margin="0,4,0,0">
                                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                            <StackPanel Margin="10">
                                                                <CheckBox Content="{DynamicResource LOC_HydraTorrent_AllSources}" IsChecked="{Binding IsAllSourcesSelected, Mode=TwoWay}" 
                                                                          Style="{StaticResource FilterCheckBoxStyle}" FontWeight="Bold"/>
                                                                <Separator Background="#22FFFFFF" Margin="0,5"/>
                                                                <ItemsControl ItemsSource="{Binding FilterSources}">
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                                                                      Style="{StaticResource FilterCheckBoxStyle}" 
                                                                                      IsEnabled="{Binding DataContext.IsAllSourcesSelected, 
                                                                                                         RelativeSource={RelativeSource AncestorType=UserControl}, 
                                                                                                         Converter={StaticResource InverseBoolConverter}}"/>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </StackPanel>
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                        </ControlTemplate>
                                    </ComboBox.Template>
                                </ComboBox>

                                <TextBlock Text="{DynamicResource LOC_HydraTorrent_MoreFilters}" Foreground="#444" 
                                           Margin="0,20,0,0" TextWrapping="Wrap" FontSize="11" FontStyle="Italic" Cursor="Arrow"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <StackPanel x:Name="pnlPagination" Orientation="Horizontal" 
                                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30"/>

                    <TextBlock x:Name="txtStatus" Text="{DynamicResource LOC_HydraTorrent_SearchPlaceholder}" 
                               VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="#888"/>
                </Grid>
            </TabItem>

            <TabItem Header="{DynamicResource LOC_HydraTorrent_TabDownloads}" Cursor="Hand">
                <Grid Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Margin="10" Background="Transparent" ClipToBounds="False" Cursor="Arrow">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.6*"/>
                                <ColumnDefinition Width="0.4*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Cursor="Arrow">
                                <!-- Фон игры -->
                                <Image x:Name="imgGameBackground"
                                        Stretch="UniformToFill"
                                        RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.OpacityMask>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#FF000000" Offset="0.0"/>
                                            <GradientStop Color="#FF000000" Offset="0.6"/>
                                            <GradientStop Color="#00000000" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Image.OpacityMask>
                                </Image>

                                <StackPanel HorizontalAlignment="Right" 
            VerticalAlignment="Center" 
            Margin="30,-28,0,0"
            Width="180">

                                    <!-- Верхний Canvas: Загрузка (синий) -->
                                    <Canvas x:Name="DownloadGraphCanvas"
                                            Width="180"
                                            Height="60"
                                            ClipToBounds="True"
                                            Panel.ZIndex="1"
                                            Visibility="Collapsed">
                                    </Canvas>

                                    <!-- Отступ между графиками -->
                                    <Rectangle Height="8" Fill="Transparent"/>

                                    <!-- Нижний Canvas: Отдача (зелёный) -->
                                    <Canvas x:Name="UploadGraphCanvas"
                                            Width="180"
                                            Height="60"
                                            ClipToBounds="True"
                                            Panel.ZIndex="1"
                                            Visibility="Collapsed">
                                    </Canvas>
                                </StackPanel>

                                <StackPanel VerticalAlignment="Bottom" Margin="20,0,0,20">
                                    <TextBlock x:Name="lblLoadingStatus" 
                                               Text="{DynamicResource LOC_HydraTorrent_Loading}"
                                               Foreground="#2ECC71"
                                               FontWeight="Bold"
                                               FontSize="12"
                                               Margin="0,0,0,5" Cursor="Arrow"/>
                                    <TextBlock x:Name="txtCurrentGameName" Text="" Foreground="White" 
                                               FontSize="36" FontWeight="Bold" Cursor="Arrow">
                                        <TextBlock.Effect>
                                            <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.9"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>

                            <Border Grid.Column="1" Padding="20" Cursor="Arrow">
                                <Grid VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">

                                        <!-- ✅ ЗАГРУЗКА (синий цвет) - ОБЪЕДИНЁННЫЙ КОНТЕЙНЕР -->
                                        <StackPanel x:Name="pnlDownloadSpeed" Margin="0,0,25,0" Visibility="Hidden">
                                            <!-- ✅ По умолчанию скрыто -->
                                            <TextBlock Text="{DynamicResource LOC_HydraTorrent_Download}"
                                                       Foreground="#888"
                                                       FontSize="11"
                                                       FontWeight="Bold"/>
                                            <TextBlock x:Name="lblCurrentSpeed"
                   Text="0 Кбит/с"
                   Foreground="#4FC3F7"
                   FontSize="18"/>
                                        </StackPanel>

                                        <StackPanel x:Name="pnlDownloadMaxSpeed" Margin="0,0,25,0" Visibility="Hidden">
                                            <!-- ✅ По умолчанию скрыто -->
                                            <TextBlock Text="{DynamicResource LOC_HydraTorrent_MaxSpeed}"
                                                       Foreground="#888"
                                                       FontSize="11"
                                                       FontWeight="Bold"/>
                                            <TextBlock x:Name="lblMaxSpeed"
                   Text="0 Кбит/с"
                   Foreground="#4FC3F7"
                   FontSize="18"/>
                                        </StackPanel>

                                        <!-- ✅ ОТДАЧА (зелёный цвет) - ОБЪЕДИНЁННЫЙ КОНТЕЙНЕР -->
                                        <StackPanel x:Name="pnlUploadSpeed" 
                Margin="0,0,25,0"
                Visibility="Hidden">
                                            <!-- ✅ По умолчанию скрыто -->
                                            <TextBlock Text="{DynamicResource LOC_HydraTorrent_Upload}"
                   Foreground="#888"
                   FontSize="11"
                   FontWeight="Bold"/>
                                            <TextBlock x:Name="lblCurrentUploadSpeed"
                   Text="0 Кбит/с"
                   Foreground="#2ECC71"
                   FontSize="18"/>
                                        </StackPanel>

                                        <StackPanel x:Name="pnlUploadMaxSpeed" 
                Margin="0,0,0,0"
                Visibility="Hidden">
                                            <!-- ✅ По умолчанию скрыто -->
                                            <TextBlock Text="{DynamicResource LOC_HydraTorrent_MaxSpeed}"
                   Foreground="#888"
                   FontSize="11"
                   FontWeight="Bold"/>
                                            <TextBlock x:Name="lblMaxUploadSpeed"
                   Text="0 Кбит/с"
                   Foreground="#2ECC71"
                   FontSize="18"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" x:Name="pnlProgressInfo">
                                        <ProgressBar x:Name="pbDownload"
                                                     Minimum="0"
                                                     Maximum="100"
                                                     Value="0"
                                                     Height="18"
                                                     Margin="0,8,0,8"
                                                     Foreground="#2ECC71"
                                                     Background="#333333"
                                                     BorderThickness="0"/>

                                        <Grid Margin="0,8,0,0">
                                            <TextBlock x:Name="lblDownloadedAmount" Text="0 ГБ / 0 ГБ" 
                                                       Foreground="#AAA" FontSize="11"/>
                                            <TextBlock x:Name="lblETA" Text="{DynamicResource LOC_HydraTorrent_NoETA}"  Foreground="#AAA" 
                                                       FontSize="11" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0">
                                        <!-- Сиды -->
                                        <StackPanel x:Name="pnlSeedsPeers" 
                                                    Orientation="Horizontal" 
                                                    Margin="0,0,20,0" 
                                                    Visibility="Hidden">
                                            <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6M12,8A4,4 0 0,0 8,12A4,4 0 0,0 12,16A4,4 0 0,0 16,12A4,4 0 0,0 12,8Z" 
                                                  Fill="#2ECC71" 
                                                  Stretch="Uniform" 
                                                  Width="14" 
                                                  Height="14"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,5,0"/>
                                            <TextBlock x:Name="lblSeeds"
                                                       Text="{DynamicResource LOC_HydraTorrent_Seeds}"
                                                       Foreground="#2ECC71"
                                                       FontSize="12"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Пиры -->
                                        <StackPanel x:Name="pnlPeers"
                                                    Orientation="Horizontal" 
                                                    Visibility="Hidden">
                                            <Path Data="M16,11C17.66,11 19,9.66 19,8C19,6.34 17.66,5 16,5C14.34,5 13,6.34 13,8C13,9.66 14.34,11 16,11M8,11C9.66,11 11,9.66 11,8C11,6.34 9.66,5 8,5C6.34,5 5,6.34 5,8C5,9.66 6.34,11 8,11M16,13C13.33,13 8,14.33 8,17V19H24V17C24,14.33 18.67,13 16,13M8,13C5.33,13 0,14.33 0,17V19H6V17C6,14.33 10.67,13 8,13Z" 
                                                  Fill="#4FC3F7" 
                                                  Stretch="Uniform" 
                                                  Width="14" 
                                                  Height="14"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,5,0"/>
                                            <TextBlock x:Name="lblPeers"
                                                       Text="{DynamicResource LOC_HydraTorrent_Peers}"
                                                       Foreground="#4FC3F7"
                                                       FontSize="12"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                                        <Button x:Name="btnSettings" 
                                                Width="40" Height="40" 
                                                Background="#22FFFFFF" 
                                                Margin="0,0,10,0" 
                                                Cursor="Hand" 
                                                Click="btnSettings_Click"
                                                Visibility="Hidden">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                                        <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.97 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.97 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.95C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.68 16.04,18.34 16.56,17.95L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                                                              Fill="White" Stretch="Uniform" Width="18"
                                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>

                                            <!-- Контекстное меню (открывается по клику на кнопку) -->
                                            <Button.ContextMenu>
                                                <ContextMenu x:Name="SettingsContextMenu">
                                                    <MenuItem Header="{DynamicResource LOC_HydraTorrent_DeleteTorrentAndFiles}"
                                                              Click="DeleteTorrentAndFiles_Click"
                                                              Foreground="Red"
                                                              FontWeight="Bold"/>
                                                    <!-- Сюда можно добавить другие пункты позже -->
                                                </ContextMenu>
                                            </Button.ContextMenu>
                                        </Button>

                                        <Button x:Name="btnPauseResume" 
                                                Width="40" Height="40" 
                                                Click="BtnPauseResume_Click" 
                                                Background="#2ECC71" 
                                                Cursor="Hand"
                                                Visibility="Hidden">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                                        <Grid>
                                                            <!-- Иконка Pause (видна при активной загрузке) -->
                                                            <Path x:Name="PauseIcon" 
                          Data="M14,19H18V5H14M6,19H10V5H6V19Z" 
                          Fill="White" 
                          Stretch="Uniform" 
                          Width="16" Height="16" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          Visibility="Visible"/>

                                                            <!-- Иконка Play (видна на паузе) -->
                                                            <Path x:Name="PlayIcon" 
                          Data="M8,5.14V19.14L19,12.14L8,5.14Z" 
                          Fill="White" 
                          Stretch="Uniform" 
                          Width="16" Height="16" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          Visibility="Collapsed"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" Margin="10,0,10,10" Background="Transparent" CornerRadius="8" Cursor="Arrow">
                        <Grid>
                            <!-- TabControl для под-вкладок Очередь/Завершённые -->
                            <TabControl x:Name="QueueTabControl" 
                    Background="Transparent" 
                    BorderThickness="0"
                    Margin="0,5,0,0">

                                <!-- Стиль для TabItem -->
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Grid Name="Panel">
                                                        <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      ContentSource="Header"
                                                      Margin="15,8"/>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Panel" Property="Background" Value="#30FFFFFF"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="False">
                                                            <Setter TargetName="Panel" Property="Background" Value="Transparent"/>
                                                            <Setter Property="Foreground" Value="#888"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>

                                <!-- ═══════════════════════════════════════════════════════════ -->
                                <!-- ПОД-ВКЛАДКА: ОЧЕРЕДЬ -->
                                <!-- ═══════════════════════════════════════════════════════════ -->
                                <TabItem Header="{DynamicResource LOC_HydraTorrent_TabQueue}" Cursor="Hand">
                                    <Grid>
                                        <!-- Пустая очередь -->
                                        <TextBlock x:Name="txtQueueEmpty"
                               Text="{DynamicResource LOC_HydraTorrent_QueueEmpty}"
                               Foreground="#888" FontSize="14" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="Collapsed"/>

                                        <!-- Список очереди -->
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                                            <ItemsControl x:Name="lstQueue" 
                                      Background="Transparent" 
                                      Foreground="White" Cursor="Arrow">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#20FFFFFF" 
                                            Margin="10,5" 
                                            Padding="15,10" 
                                            CornerRadius="6"
                                            BorderBrush="#30FFFFFF"
                                            BorderThickness="1">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="60"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Иконка игры -->
                                                                <Border Grid.Column="0" 
                                                    Width="50" 
                                                    Height="50" 
                                                    CornerRadius="6"
                                                    Background="#30000000"
                                                    Margin="0,0,10,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center">
                                                                    <Image x:Name="imgQueueCover" 
                                                       Stretch="UniformToFill"
                                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                                                </Border>

                                                                <!-- Информация об игре -->
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                    <TextBlock Text="{Binding GameName}" 
                                                           Foreground="White" 
                                                           FontSize="14" 
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis"/>
                                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                                        <TextBlock Text="{Binding Size}" 
                                                               Foreground="#AAA" 
                                                               FontSize="11"/>
                                                                        <TextBlock Text=" • " 
                                                               Foreground="#AAA" 
                                                               FontSize="11" 
                                                               Margin="5,0"/>
                                                                        <TextBlock Foreground="#AAA" FontSize="11">
                                                        <Run Text="{DynamicResource LOC_HydraTorrent_Position}"/>
                                                        <Run Text="{Binding QueuePosition}" 
                                                             FontWeight="Bold" 
                                                             Foreground="#4FC3F7"/>
                                                                        </TextBlock>
                                                                        <TextBlock Text=" • " 
                                                               Foreground="#AAA" 
                                                               FontSize="11" 
                                                               Margin="5,0"/>
                                                                        <TextBlock Foreground="#AAA" FontSize="11">
                                                        <Run Text="{DynamicResource LOC_HydraTorrent_Status}"/>
                                                        <Run Text="{Binding QueueStatus}" FontWeight="Bold">
                                                            <Run.Style>
                                                                <Style TargetType="Run">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding QueueStatus}" Value="Downloading">
                                                                            <Setter Property="Foreground" Value="#2ECC71"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding QueueStatus}" Value="Queued">
                                                                            <Setter Property="Foreground" Value="#F39C12"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding QueueStatus}" Value="Paused">
                                                                            <Setter Property="Foreground" Value="#95A5A6"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Run.Style>
                                                        </Run>
                                                                        </TextBlock>
                                                                    </StackPanel>
                                                                </StackPanel>

                                                                <!-- Кнопки управления -->
                                                                <StackPanel Grid.Column="2" 
                                                        Orientation="Horizontal" 
                                                        VerticalAlignment="Center"
                                                        Margin="10,0,0,0">
                                                                    <!-- Вверх -->
                                                                    <Button Width="32" Height="32" Margin="0,0,5,0"
                                                        Background="#30FFFFFF" BorderThickness="0" Cursor="Hand"
                                                        ToolTip="{DynamicResource LOC_HydraTorrent_MoveUp}"
                                                        Click="BtnQueueUp_Click">
                                                                        <Button.Template>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                                    <Path Data="M7.41,15.41L12,10.83L16.59,15.41L18,14L12,8L6,14L7.41,15.41Z" 
                                                                      Fill="#CCC" Stretch="Uniform" Width="14" Height="14"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="#50FFFFFF"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Button.Template>
                                                                    </Button>

                                                                    <!-- Вниз -->
                                                                    <Button Width="32" Height="32" Margin="0,0,5,0"
                                                        Background="#30FFFFFF" BorderThickness="0" Cursor="Hand"
                                                        ToolTip="{DynamicResource LOC_HydraTorrent_MoveDown}"
                                                        Click="BtnQueueDown_Click">
                                                                        <Button.Template>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                                    <Path Data="M7.41,8.59L12,13.17L16.59,8.59L18,10L12,16L6,10L7.41,8.59Z" 
                                                                      Fill="#CCC" Stretch="Uniform" Width="14" Height="14"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="#50FFFFFF"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Button.Template>
                                                                    </Button>

                                                                    <!-- Удалить -->
                                                                    <Button Width="32" Height="32"
                                                        Background="#30FFFFFF" BorderThickness="0" Cursor="Hand"
                                                        ToolTip="{DynamicResource LOC_HydraTorrent_Delete}"
                                                        Click="BtnQueueDelete_Click">
                                                                        <Button.Template>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                                    <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                                                      Fill="#FF5555" Stretch="Uniform" Width="12" Height="12"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="#50FFFFFF"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Button.Template>
                                                                    </Button>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Grid>
                                </TabItem>

                                <!-- ═══════════════════════════════════════════════════════════ -->
                                <!-- ПОД-ВКЛАДКА: ЗАВЕРШЁННЫЕ -->
                                <!-- ═══════════════════════════════════════════════════════════ -->
                                <TabItem Header="{DynamicResource LOC_HydraTorrent_TabCompleted}" Cursor="Hand">
                                    <Grid>
                                        <!-- Кнопка очистки -->
                                        <Button x:Name="btnClearCompleted" 
                            Content="{DynamicResource LOC_HydraTorrent_CompletedClearAll}"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Margin="0,5,10,0" Padding="12,5"
                            Background="#30FFFFFF" Foreground="White"
                            Click="BtnClearCompleted_Click" Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <!-- Пустой список -->
                                        <TextBlock x:Name="txtCompletedEmpty"
                               Text="{DynamicResource LOC_HydraTorrent_CompletedEmpty}"
                               Foreground="#888" FontSize="14" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="Collapsed"/>

                                        <!-- Список завершённых -->
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5,35,5,5">
                                            <ItemsControl x:Name="lstCompleted" 
                                      Background="Transparent" 
                                      Foreground="White">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#20FFFFFF" 
                                            Margin="10,5" 
                                            Padding="15,10" 
                                            CornerRadius="6"
                                            BorderBrush="#30FFFFFF"
                                            BorderThickness="1">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="60"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Иконка игры -->
                                                                <Border Grid.Column="0" 
                                                    Width="50" Height="50" 
                                                    CornerRadius="6"
                                                    Background="#30000000"
                                                    Margin="0,0,10,0">
                                                                    <Image Stretch="UniformToFill"
                                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                                                </Border>

                                                                <!-- Информация -->
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                    <TextBlock Text="{Binding GameName}" 
                                                           Foreground="White" FontSize="14" 
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis"/>
                                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                                        <!-- Тип -->
                                                                        <TextBlock Foreground="White" FontSize="11">
                                                                            <TextBlock.Style>
                                                                                <Style TargetType="TextBlock">
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding DetectedType}" Value="Portable">
                                                                                            <Setter Property="Text" Value="{DynamicResource LOC_HydraTorrent_TypePortable}"/>
                                                                                            <Setter Property="Foreground" Value="#2ECC71"/>
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding DetectedType}" Value="Repack">
                                                                                            <Setter Property="Text" Value="{DynamicResource LOC_HydraTorrent_TypeRepack}"/>
                                                                                            <Setter Property="Foreground" Value="#F39C12"/>
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding DetectedType}" Value="Unknown">
                                                                                            <Setter Property="Text" Value="{DynamicResource LOC_HydraTorrent_TypeUnknown}"/>
                                                                                            <Setter Property="Foreground" Value="#888"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </TextBlock.Style>
                                                                        </TextBlock>

                                                                        <TextBlock Text=" • " Foreground="#AAA" FontSize="11" Margin="5,0"/>

                                                                        <!-- Размер -->
                                                                        <TextBlock Text="{Binding Size}" Foreground="#AAA" FontSize="11"/>

                                                                        <TextBlock Text=" • " Foreground="#AAA" FontSize="11" Margin="5,0"/>

                                                                        <!-- Статус -->
                                                                        <Path Data="M9,16.17L4.83,12L3.41,13.41L9,19L21,7L19.59,5.59L9,16.17Z" 
                                                          Fill="#2ECC71" Stretch="Uniform" Width="12" Height="12"
                                                          Visibility="{Binding IsConfigured, Converter={StaticResource BoolToVisConverter}}"
                                                          ToolTip="{DynamicResource LOC_HydraTorrent_StatusConfigured}"/>

                                                                        <TextBlock Text=" • " Foreground="#AAA" FontSize="11" Margin="5,0"/>

                                                                        <!-- Дата -->
                                                                        <TextBlock Text="{Binding CompletedAt, StringFormat={}{0:dd/MM/yyyy}}" 
                                                               Foreground="#AAA" FontSize="11"/>
                                                                    </StackPanel>
                                                                </StackPanel>

                                                                <!-- Кнопки -->
                                                                <StackPanel Grid.Column="2" 
                                                        Orientation="Horizontal" 
                                                        VerticalAlignment="Center">
                                                                    <!-- Открыть папку -->
                                                                    <Button Content="📁" Width="32" Height="32" Margin="0,0,5,0"
                                                        ToolTip="{DynamicResource LOC_HydraTorrent_CompletedOpenFolder}"
                                                        Click="BtnOpenCompletedFolder_Click" Tag="{Binding}"
                                                        Background="#30FFFFFF" Cursor="Hand">
                                                                        <Button.Template>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Button.Template>
                                                                    </Button>

                                                                    <!-- Удалить из списка -->
                                                                    <Button Content="✕" Width="32" Height="32"
                                                        ToolTip="{DynamicResource LOC_HydraTorrent_CompletedRemove}"
                                                        Click="BtnRemoveCompleted_Click" Tag="{Binding}"
                                                        Background="#30FFFFFF" Foreground="#FF5555" Cursor="Hand">
                                                                        <Button.Template>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Button.Template>
                                                                    </Button>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Grid>
                                </TabItem>

                            </TabControl>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource LOC_HydraTorrent_TabStatistics}" Cursor="Hand">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- ═══════════════════════════════════════════════════════════ -->
                        <!-- КАРТОЧКИ СТАТИСТИКИ -->
                        <!-- ═══════════════════════════════════════════════════════════ -->
                        <UniformGrid Grid.Row="0" Columns="4" Margin="0,0,0,25">

                            <!-- Всего загрузок -->
                            <Border Background="#15FFFFFF" CornerRadius="10" Padding="20" Margin="0,0,10,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource LOC_HydraTorrent_StatsTotalDownloads}" 
                                   Foreground="#888" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="txtStatsTotalDownloads" Text="0" 
                                   Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,8,0,0"/>
                                    <TextBlock Text="{DynamicResource LOC_HydraTorrent_StatsGames}" 
                                   Foreground="#666" FontSize="11"/>
                                </StackPanel>
                            </Border>

                            <!-- Общий размер -->
                            <Border Background="#15FFFFFF" CornerRadius="10" Padding="20" Margin="10,0,10,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource LOC_HydraTorrent_StatsTotalSize}" 
                                   Foreground="#888" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="txtStatsTotalSize" Text="0 GB" 
                                   Foreground="#4FC3F7" FontSize="36" FontWeight="Bold" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Общее время -->
                            <Border Background="#15FFFFFF" CornerRadius="10" Padding="20" Margin="10,0,10,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource LOC_HydraTorrent_StatsTotalTime}" 
                                   Foreground="#888" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="txtStatsTotalTime" Text="-" 
                                   Foreground="#F39C12" FontSize="36" FontWeight="Bold" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Средняя скорость -->
                            <Border Background="#15FFFFFF" CornerRadius="10" Padding="20" Margin="10,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource LOC_HydraTorrent_StatsAvgSpeed}" 
                                   Foreground="#888" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="txtStatsAvgSpeed" Text="-" 
                                   Foreground="#2ECC71" FontSize="36" FontWeight="Bold" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <!-- ═══════════════════════════════════════════════════════════ -->
                        <!-- ТИПЫ ИГР + ТОП ИГР -->
                        <!-- ═══════════════════════════════════════════════════════════ -->
                        <Grid Grid.Row="1" Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Типы игр -->
                            <Border Grid.Column="0" Background="#15FFFFFF" CornerRadius="10" Padding="25" Margin="0,0,10,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource LOC_HydraTorrent_StatsGamesByType}" 
                                   Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,20"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Portable -->
                                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                            <Border Width="80" Height="80" CornerRadius="40" Background="#202ECC71" Margin="0,0,0,10">
                                                <TextBlock x:Name="txtStatsPortables" Text="0" 
                                               Foreground="#2ECC71" FontSize="28" FontWeight="Bold"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="{DynamicResource LOC_HydraTorrent_StatsPortables}" 
                                           Foreground="#AAA" FontSize="12" HorizontalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Repack -->
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                            <Border Width="80" Height="80" CornerRadius="40" Background="#20F39C12" Margin="0,0,0,10">
                                                <TextBlock x:Name="txtStatsRepacks" Text="0" 
                                               Foreground="#F39C12" FontSize="28" FontWeight="Bold"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="{DynamicResource LOC_HydraTorrent_StatsRepacks}" 
                                           Foreground="#AAA" FontSize="12" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Прогресс-бар соотношения -->
                                    <Grid Height="8" Margin="0,25,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition x:Name="colPortable" Width="*"/>
                                            <ColumnDefinition x:Name="colRepack" Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="#2ECC71" CornerRadius="4,0,0,4"/>
                                        <Border Grid.Column="1" Background="#F39C12" CornerRadius="0,4,4,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Топ по размеру -->
                            <Border Grid.Column="1" Background="#15FFFFFF" CornerRadius="10" Padding="25" Margin="10,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource LOC_HydraTorrent_StatsTopGames}" 
                                   Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,15"/>

                                    <ItemsControl x:Name="lstTopGames" MaxHeight="200">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,0,0,12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="25"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="{Binding Rank}" 
                                                   Foreground="#666" FontSize="13" FontWeight="Bold"
                                                   VerticalAlignment="Center"/>

                                                    <TextBlock Grid.Column="1" Text="{Binding GameName}" 
                                                   Foreground="White" FontSize="13" 
                                                   TextTrimming="CharacterEllipsis" Margin="10,0,10,0"
                                                   VerticalAlignment="Center"/>

                                                    <TextBlock Grid.Column="2" Text="{Binding Size}" 
                                                   Foreground="#4FC3F7" FontSize="12"
                                                   VerticalAlignment="Center"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <TextBlock x:Name="txtNoTopGames" 
                                   Text="{DynamicResource LOC_HydraTorrent_StatsNoData}"
                                   Foreground="#666" FontSize="12" HorizontalAlignment="Center" Margin="0,30,0,0"
                                   Visibility="Collapsed"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- ═══════════════════════════════════════════════════════════ -->
                        <!-- ДОПОЛНИТЕЛЬНАЯ СТАТИСТИКА -->
                        <!-- ═══════════════════════════════════════════════════════════ -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Общий Upload -->
                            <Border Grid.Column="0" Background="#15FFFFFF" CornerRadius="10" Padding="20" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource LOC_HydraTorrent_StatsTotalUploaded}" 
                                   Foreground="#888" FontSize="11"/>
                                    <TextBlock x:Name="txtStatsTotalUploaded" Text="0 GB" 
                                   Foreground="#2ECC71" FontSize="22" FontWeight="Bold" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Общий Ratio -->
                            <Border Grid.Column="1" Background="#15FFFFFF" CornerRadius="10" Padding="20" Margin="10,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource LOC_HydraTorrent_StatsOverallRatio}" 
                                   Foreground="#888" FontSize="11"/>
                                    <TextBlock x:Name="txtStatsOverallRatio" Text="0.00" 
                                   Foreground="#4FC3F7" FontSize="22" FontWeight="Bold" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Кнопка сброса -->
                            <Border Grid.Column="2" Background="#15FFFFFF" CornerRadius="10" Padding="20" Margin="10,0,0,0">
                                <Button x:Name="btnResetStats" 
                            Content="{DynamicResource LOC_HydraTorrent_StatsReset}"
                            Padding="20,10" Background="#25FF5555" Foreground="White"
                            Click="BtnResetStats_Click" Cursor="Hand" HorizontalAlignment="Right">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Border>
                        </Grid>

                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>