<UserControl x:Class="HydraTorrent.Views.HydraHubView" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HydraTorrent.Views"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <local:ColumnWidthConverter x:Key="ColumnWidthConverter" />
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <Border DockPanel.Dock="Top" Background="Transparent" Height="52" BorderThickness="0,0,0,1">
            <Border.BorderBrush>
                <SolidColorBrush Color="Gray" Opacity="0.2"/>
            </Border.BorderBrush>
            <DockPanel>
                <Button x:Name="btnBack" Width="48" Height="48" Margin="8,0,0,0" Click="BtnBack_Click" Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" Fill="#CCCCCC" Stretch="Uniform" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <TextBlock Text="Hydra Hub" Margin="12,0,0,0" VerticalAlignment="Center" FontSize="22" FontWeight="SemiBold" Foreground="White"/>
            </DockPanel>
        </Border>

        <TabControl x:Name="MainTabControl" Margin="0,8,0,0" Background="Transparent" BorderThickness="0">
            <TabItem Header="🔍 Поиск репаков">
                <Grid Margin="15">
                    <Grid Margin="0,0,0,15" Height="40" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtSearch" Height="40" FontSize="18" Padding="15,0" Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="1" VerticalContentAlignment="Center" KeyDown="TxtSearch_KeyDown" TextChanged="TxtSearch_TextChanged">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="20"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <Button x:Name="btnSearch" Grid.Column="1" Content="Искать" Height="40" Width="120" Margin="10,0,0,0" Click="BtnSearch_Click" FontSize="16">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#2ECC71" CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Popup x:Name="HistoryPopup" PlacementTarget="{Binding ElementName=txtSearch}" Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                            <Border Background="#E61E1E1E" BorderBrush="#44FFFFFF" BorderThickness="1" CornerRadius="12" Width="{Binding ElementName=txtSearch, Path=ActualWidth}">
                                <ListBox x:Name="lstHistory" Background="Transparent" BorderThickness="0" Foreground="White" SelectionChanged="LstHistory_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Margin="10,5"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </Popup>
                    </Grid>

                    <Grid Margin="0,55,0,70">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.8*"/>
                            <ColumnDefinition Width="0.2*"/>
                        </Grid.ColumnDefinitions>

                        <ListView x:Name="lstResults" 
                                  Grid.Column="0"
                                  Background="#2D2D2D" Foreground="White" 
                                  BorderThickness="0" MouseDoubleClick="LstResults_MouseDoubleClick">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Название" 
                                        Width="{Binding ElementName=lstResults, Path=ActualWidth, Converter={StaticResource ColumnWidthConverter}, ConverterParameter=0.72}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Размер" DisplayMemberBinding="{Binding Size}"
                                        Width="{Binding ElementName=lstResults, Path=ActualWidth, Converter={StaticResource ColumnWidthConverter}, ConverterParameter=0.10}"/>

                                    <GridViewColumn Header="Источник" DisplayMemberBinding="{Binding Source}"
                                        Width="{Binding ElementName=lstResults, Path=ActualWidth, Converter={StaticResource ColumnWidthConverter}, ConverterParameter=0.125}"/>

                                    <GridViewColumn Header="Год" DisplayMemberBinding="{Binding Year}"
                                        Width="{Binding ElementName=lstResults, Path=ActualWidth, Converter={StaticResource ColumnWidthConverter}, ConverterParameter=0.05}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>

                    <StackPanel x:Name="pnlPagination" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30"/>
                    <TextBlock x:Name="txtStatus" Text="Введите название игры и нажмите Искать" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="#888"/>
                </Grid>
            </TabItem>

            <TabItem Header="📥 Менеджер загрузок">
                <Grid Background="Transparent">
                    <TextBlock Text="Менеджер загрузок будет здесь" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#888"/>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>