<UserControl x:Class="HydraTorrent.HydraTorrentSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="700">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">

            <TextBlock Text="{DynamicResource LOC_HydraTorrent_QBittorrentSettings}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <CheckBox x:Name="chkUseQb" Content="{DynamicResource LOC_HydraTorrent_UseQbittorrent}"
                      IsChecked="{Binding Settings.UseQbittorrent}" Margin="0,0,0,15"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{DynamicResource LOC_HydraTorrent_Host}" VerticalAlignment="Center" Width="120"/>
                <TextBox Grid.Column="1" Text="{Binding Settings.QBittorrentHost}" />
            </Grid>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{DynamicResource LOC_HydraTorrent_Port}" VerticalAlignment="Center" Width="120"/>
                <TextBox Grid.Column="1" Text="{Binding Settings.QBittorrentPort}" />
            </Grid>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{DynamicResource LOC_HydraTorrent_Username}" VerticalAlignment="Center" Width="120"/>
                <TextBox Grid.Column="1" Text="{Binding Settings.QBittorrentUsername}" />
            </Grid>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{DynamicResource LOC_HydraTorrent_Password}" VerticalAlignment="Center" Width="120"/>
                <PasswordBox Grid.Column="1" x:Name="txtPassword" PasswordChanged="txtPassword_PasswordChanged" />
            </Grid>
            <Separator Margin="0,10"/>
            <TextBlock Text="{DynamicResource LOC_HydraTorrent_DownloadPaths}" FontWeight="Bold" FontSize="16" Margin="0,10,0,10"/>
            <CheckBox Content="{DynamicResource LOC_HydraTorrent_UseDefaultPath}"
                      IsChecked="{Binding Settings.UseDefaultDownloadPath}" Margin="0,0,0,10"/>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{DynamicResource LOC_HydraTorrent_DownloadPaths}" VerticalAlignment="Center" Width="120"/>
                <TextBox Grid.Column="1" Text="{Binding Settings.DefaultDownloadPath}" x:Name="DefaultPathText" />
                <Button Grid.Column="2" Content="{DynamicResource LOC_HydraTorrent_Browse}" Click="BrowseDefaultPath_Click" Margin="5,0,0,0" Padding="10,2"/>
            </Grid>
            <Button Content="{DynamicResource LOC_HydraTorrent_TestConnection}"
                    Click="TestConnection_Click"
                    HorizontalAlignment="Left"
                    Padding="20,8"/>

            <!-- ==================== НОВЫЙ РАЗДЕЛ: ИСТОЧНИКИ ==================== -->
            <Separator Margin="0,25,0,15"/>

            <TextBlock Text="{DynamicResource LOC_HydraTorrent_RepackSources}" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Margin="0,0,0,10"/>

            <Button Content="{DynamicResource LOC_HydraTorrent_AddSource}" 
                    HorizontalAlignment="Left" 
                    Padding="18,8" 
                    Click="AddSource_Click"
                    Margin="0,0,0,15"/>

            <!-- Динамический список источников -->
            <StackPanel x:Name="SourcesPanel" />

            <TextBlock Text="{DynamicResource LOC_HydraTorrent_SourceHint}"
                       Margin="0,15,0,0" 
                       FontSize="12" 
                       Foreground="#888" 
                       TextWrapping="Wrap"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>