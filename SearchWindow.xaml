<Window x:Class="HydraTorrent.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="🔍 Поиск торрентов (Hydra)" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="#1E1E1E"
        Foreground="White">

    <Grid Margin="10">
        <TextBox x:Name="txtSearch" 
                 Height="40" 
                 VerticalAlignment="Top"
                 FontSize="18"
                 Padding="10"
                 KeyDown="TxtSearch_KeyDown"
                 Background="#2D2D2D"
                 Foreground="White"
                 BorderBrush="#555"
                 Margin="0,0,130,0"/>
        <Button x:Name="btnSearch" 
                Content="Искать" 
                Height="40" 
                Width="120"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Click="BtnSearch_Click"
                FontSize="16"/>

        <ListView x:Name="lstResults" 
                  Margin="0,55,0,70" Background="#2D2D2D"
                  Foreground="White"
                  SelectionMode="Single"
                  MouseDoubleClick="LstResults_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" Width="500" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Размер" Width="100" DisplayMemberBinding="{Binding Size}"/>
                    <GridViewColumn Header="Источник" Width="150" DisplayMemberBinding="{Binding Source}"/>
                    <GridViewColumn Header="Год" Width="80" DisplayMemberBinding="{Binding Year}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel x:Name="pnlPagination" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom" 
                    Margin="0,0,0,30"/>
        <TextBlock x:Name="txtStatus" 
                   Text="Введите название игры и нажмите Искать или Enter"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   Foreground="#888"/>
    </Grid>
</Window>